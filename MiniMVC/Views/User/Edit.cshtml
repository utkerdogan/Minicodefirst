@model MiniMVC.Models.User

<form asp-action="Edit" method="post" class="w-50 position-absolute top-50 start-50 translate-middle">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group pb-4">
        <label asp-for="Username" class="pb-2"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group pb-4">
        <label asp-for="Email" class="pb-2"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group pb-4">
        <label for="pass" class="pb-2">Şifreniz</label>
        <input id="pass" name="pass" class="form-control" type="password" required />
    </div>

    <button type="submit" class="btn btn-success rounded-3">Kaydet</button>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }
</form>
