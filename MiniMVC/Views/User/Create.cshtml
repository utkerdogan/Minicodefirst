@model MiniMVC.Models.User

<form asp-action="Create" method="post" class="w-50 position-absolute top-50 start-50 translate-middle">
    <div class="form-group pb-4">
        <label asp-for="Username" class="pb-2"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group pb-4">
        <label asp-for="Email" class="pb-2"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group pb-4">
        <label asp-for="Password" class="pb-2">Şifre</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success rounded-3">Kaydet</button>
</form>
