
<form asp-action="Login" method="post" class="w-50 position-absolute top-50 start-50 translate-middle">
    <div class="form-group pb-4">
        <label for="userName" class="pb-2">Kullanıcı Adı</label>
        <input name="userName" class="form-control" required />
    </div>

    <div class="form-group pb-4">
        <label for="Password" class="pb-2">Şifre</label>
        <input name="Password" type="Password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success rounded-3">Giriş Yap</button>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }
</form>
