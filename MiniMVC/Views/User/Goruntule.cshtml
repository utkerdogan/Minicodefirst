<table class="table table-bordered table-light table-striped mt-3">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody class="align-middle">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td class="d-flex justify-content-around">
                     <form asp-action="Delete" asp-controller="User" asp-route-id="@user.UserId" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


