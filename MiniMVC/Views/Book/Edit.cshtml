@model MiniMVC.Models.Book

<form asp-action="Edit" method="post" class="w-50 position-absolute top-50 start-50 translate-middle">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group pb-4">
        <label asp-for="Title" class="pb-2"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group pb-4">
        <label asp-for="Year" class="pb-2"></label>
        <input asp-for="Year" class="form-control" />
    </div>

    <div class="form-group pb-4">
        <label asp-for="AuthorId" class="pb-2">Yazar</label>
        <select asp-for="AuthorId" asp-items="ViewBag.Authors" class="form-control">
            <option value="">Yazar Seçiniz</option>
        </select>
    </div>

    <div class="form-group pb-4">
        <label asp-for="GenreId" class="pb-2">Tür</label>
        <select asp-for="GenreId" asp-items="ViewBag.Genres" class="form-control">
            <option value="">Tür Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success rounded-3">Kaydet</button>
</form>
