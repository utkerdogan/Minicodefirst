@model IEnumerable<MiniMVC.Models.Author>

    <table class="table table-bordered table-light table-stripped mt-3">
        <thead>
            <tr>
                <th>Yazar Adı</th>
                <th>Doğum Tarihi</th>
                <th>Kitapları</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Yas</td>
                    <td>
                        @if (item.Books != null && item.Books.Any())
                        {
                            @foreach (var book in item.Books)
                            {
                                <span>@book.BookId</span><br />
                            }
                        }
                        else
                        {
                            <span>Kitap yok</span>
                        }

                    </td>
                    <td class="justify-content-around">
                        <a asp-action="Edit" asp-controller="Author" asp-route-id="@item.AuthorId" class="btn btn-warning p-2 mb-1">Edit</a>
                        <form asp-action="Delete" asp-controller="Author" asp-route-id="@item.AuthorId" method="post">
                            <button type="submit" class="btn btn-danger p-2">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Author" class="btn btn-success">
            Yeni Yazar Ekle
        </a>
    </div>
</div>
