@model MiniMVC.Models.Author

<form asp-action="Edit" method="post" class="w-50 position-absolute top-50 start-50 translate-middle">
    <input type="hidden" asp-for="AuthorId" />

    <div class="form-group pb-4">
        <label asp-for="Name" class="pb-2"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group pb-4">
        <label asp-for="Yas" class="pb-2"></label>
        <input asp-for="Yas" type="text" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success rounded-3">Güncelle</button>
</form>
